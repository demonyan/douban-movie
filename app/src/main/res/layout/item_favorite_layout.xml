<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/size_3dp"
                                    app:cardCornerRadius="@dimen/size_2dp"
                                    app:cardElevation="@dimen/size_1dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_item_favorite_image"
            android:layout_width="92dp"
            android:layout_height="128dp"
            tools:ignore="ContentDescription"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_8dp"
                android:orientation="vertical"
                android:padding="@dimen/size_16dp"
                >

                <TextView
                    android:id="@+id/tv_item_favorite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/size_16sp"
                    />

                <TextView
                    android:id="@+id/tv_item_favorite_cel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:maxLines="3"
                    android:textSize="@dimen/size_13sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="end"
                android:layout_marginEnd="-24dp"
                android:layout_marginTop="-24dp"
                android:background="@drawable/bg_rating"
                tools:ignore="ContentDescription"
                />

            <TextView
                android:id="@+id/tv_item_favorite_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/size_14sp"
                />
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>