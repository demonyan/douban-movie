<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_2dp"
    android:background="@color/gray_white_1000"
    android:gravity="center"
    android:padding="@dimen/size_8dp"
    >

    <ImageView
        android:id="@+id/iv_item_simple_film_image"
        android:layout_width="108dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_item_simple_film_text"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/gray_800"
        android:gravity="center"
        android:padding="@dimen/size_2dp"
        android:singleLine="true"
        android:textColor="@color/gray_white_1000"
        android:textSize="@dimen/size_14sp"
        />
</FrameLayout>